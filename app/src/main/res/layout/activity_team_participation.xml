<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.main.team.option_menu.TeamParticipationActivity"
    android:orientation="vertical" >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/title_team_participation"
        app:contentInsetStart="0dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="?attr/actionBarSize"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_arrow"
                android:padding="13dp"
                android:id="@+id/iv_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_edit_profile_title"
                android:textSize="@dimen/title_text_size"
                android:text="@string/title_participation"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/iv_back"
                android:layout_centerVertical="true" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/team_participation_title" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="fill"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="7dp"
                app:cardUseCompatPadding="true" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_faithful_ranking_title"
                        android:text="@string/todo_faithful_ranking_title"
                        android:textSize="@dimen/title_text_size"
                        android:layout_marginTop="13dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="13dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_faithful_first_rank"
                                android:text="@string/first_rank"
                                android:layout_gravity="center" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:id="@+id/iv_member_faithful_first_rank"
                                tools:src="@drawable/sample_profile_image"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_faithful_first_rank_member_name"
                                tools:text="@string/first_rank_member_name"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_faithful_first_rank_percent"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                tools:text="@string/rank_percent" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_faithful_second_rank"
                                android:text="@string/second_rank"
                                android:layout_gravity="center" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:id="@+id/iv_member_faithful_second_rank"
                                tools:src="@drawable/sample_profile_image"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_faithful_second_rank_member_name"
                                tools:text="@string/second_rank_member_name"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_faithful_second_rank_percent"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                tools:text="@string/rank_percent" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_faithful_third_rank"
                                android:text="@string/third_rank"
                                android:layout_gravity="center" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:id="@+id/iv_member_faithful_third_rank"
                                tools:src="@drawable/sample_profile_image"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_faithful_third_rank_member_name"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                tools:text="@string/third_rank_member_name" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_faithful_third_rank_percent"
                                tools:text="@string/rank_percent"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_faithful_fourth_rank"
                                android:layout_gravity="center"
                                android:text="@string/fourth_rank" />

                            <de.hdodenhof.circleimageview.CircleImageView
